# Build the manager binary
FROM golang:1.25.0-alpine AS builder

WORKDIR /workspace
COPY go.mod go.mod
COPY go.sum go.sum

#RUN go mod download

# Copy the go source
COPY cmd/ cmd/
COPY pkg/ pkg/
COPY vendor/ vendor/

# Build
RUN CGO_ENABLED=0 GOOS=linux go build -a -o webhook-server ./cmd/server.go


FROM alpine

WORKDIR /
COPY --from=builder /workspace/webhook-server .

ENTRYPOINT ["/webhook-server"]
